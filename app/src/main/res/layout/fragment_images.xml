<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pagingAdapter"
            type="com.hefny.hady.pixabaygallery.modules.images.presentation.adapter.ImagesPagingAdapter" />

        <variable
            name="loadAdapter"
            type="com.hefny.hady.pixabaygallery.modules.images.presentation.adapter.ImagesLoadStateAdapter" />

        <variable
            name="itemDecorator"
            type="com.hefny.hady.pixabaygallery.modules.images.presentation.view.SimpleDividerItemDecoration" />

        <variable
            name="imagesViewModel"
            type="com.hefny.hady.pixabaygallery.modules.images.presentation.ImagesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.images.presentation.view.ImagesFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adapter="@{pagingAdapter.withLoadStateFooter(loadAdapter)}"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            app:itemDecoration="@{itemDecorator}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="@integer/span_count"
            tools:listitem="@layout/image_list_item" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>